generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  OWNER
}

// NextAuth.js models for authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  trips         Trip[]
  hotels        Hotel[]
  flights       Flight[]
  cartItems     CartItem[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Trip {
  id            String          @id @default(cuid())
  title         String
  destination   String
  startDate     DateTime
  endDate       DateTime
  images        Image[]
  userId        String?
  user          User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  locations     Location[]
  hotelBookings HotelBooking[]
  flightBookings FlightBooking[]
}

model Image {
  id        String   @id @default(cuid())
  url       String
  filename  String?
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Location {
  id            String   @id @default(cuid())
  locationTitle String
  lat           Float
  lng           Float
  trip          Trip     @relation(fields: [tripId], references: [id])
  tripId        String
  order         Int      @default(0)
  createdAt     DateTime @default(now())
}

model Hotel {
  id          String         @id @default(cuid())
  name        String
  city        String
  country     String
  address     String
  description String?
  pricePerNight Float
  imageUrl    String?
  ownerId     String
  owner       User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  bookings    HotelBooking[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Flight {
  id            String          @id @default(cuid())
  airline       String
  flightNumber  String
  origin        String
  destination   String
  departureTime DateTime
  arrivalTime   DateTime
  price         Float
  ownerId       String
  owner         User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  bookings      FlightBooking[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model HotelBooking {
  id          String   @id @default(cuid())
  checkIn     DateTime
  checkOut    DateTime
  hotelId     String
  hotel       Hotel    @relation(fields: [hotelId], references: [id], onDelete: Cascade)
  tripId      String
  trip        Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

model FlightBooking {
  id        String   @id @default(cuid())
  flightId  String
  flight    Flight   @relation(fields: [flightId], references: [id], onDelete: Cascade)
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  itemType  String
  itemId    String
  tripId    String?
  createdAt DateTime @default(now())
}